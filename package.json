{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "react-scripts": "^4.0.3"
  },
  "scripts": {
    "build": "react-scripts build",
    "serve": "serve -s build -p 5002",
    "start": "set PORT=8002 && react-scripts start",
    "start-bs": "browser-sync start -s build -f --port 6002 --no-open",
    "sass": "cd src/sass && sass --watch main.scss main.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
